<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secondActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/BackButton"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ProfileText"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="15dp"
                    android:src="@drawable/back"
                    android:contentDescription="@string/BackText"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/ProfileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ProfileText"
                    android:layout_margin="15dp"
                    app:layout_constraintStart_toEndOf="@id/BackButton"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="18sp"/>
            </LinearLayout>
            <View
                android:id="@+id/DividerLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/Header"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:background="#E2E2E2"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/ProfileImageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/DividerLine">
                <ImageView
                    android:src="@drawable/profile"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:contentDescription="@string/SlackImageDescription"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/NameText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ProfileImageCard"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:text="@string/NameText"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/WaffleYearText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/NameText"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="25dp"
                android:text="@string/WaffleYearText"
                android:textSize="20sp"/>

            <LinearLayout
                android:id="@+id/AlertAndTimeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/WaffleYearText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/TableFirstRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/OnlineText"
                        android:contentDescription="@string/SlackImageDescription"
                        android:scaleType="centerCrop"/>
                        <TextView
                        android:id="@+id/OnlineText"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/NameText"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:text="@string/OnlineAndAlertText"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/TableSecondRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/TableFirstRow"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/OnlineText"
                        android:contentDescription="@string/SlackImageDescription"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/TimeText"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/NameText"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:text="@string/TimeText"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AlertAndTimeLayout">
                <Button
                    android:id="@+id/EditState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/white"
                    android:text="@string/EditState"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/EditState"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="@string/EditProfile"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <View
                android:id="@+id/DividerLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/LinearButtonLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:background="#E2E2E2"/>

            <LinearLayout
                android:id="@+id/ContactLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                app:layout_constraintTop_toBottomOf="@id/DividerLine2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ContactInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="0dp"
                    android:text="연락처 정보"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:id="@+id/ContactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/ContactInfoText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/PhoneIcon"
                        android:src="@drawable/icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/SlackImageDescription"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:id="@+id/PhoneInfoLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/PhoneIcon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/PhoneInfo"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/PhoneIcon"
                            android:layout_marginStart="10dp"
                            android:text="010-2800-6283"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/PhoneText"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/PhoneInfo"
                            app:layout_constraintLeft_toRightOf="@id/PhoneIcon"
                            android:layout_marginStart="10dp"
                            android:text="Phone"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ContactEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/ContactPhone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/EmailIcon"
                        android:src="@drawable/icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/SlackImageDescription"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:id="@+id/EmailInfoLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/EmailIcon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/EmailInfo"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/EmailIcon"
                            android:layout_marginStart="10dp"
                            android:text="qdrptd@gmail.com"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/EmailText"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/EmailInfo"
                            app:layout_constraintLeft_toRightOf="@id/EmailIcon"
                            android:layout_marginStart="10dp"
                            android:text="Email"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/DividerLine3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/ContactLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="10dp"
                android:background="#E2E2E2"/>

            <LinearLayout
                android:id="@+id/AboutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                app:layout_constraintTop_toBottomOf="@id/DividerLine2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/AboutMeText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="10dp"
                    android:text="내 소개"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/DepartmentText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:text="소속"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/Department"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="15dp"
                    android:text="산업공학과, 24학번"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/GithubText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:text="Github"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/Github"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="15dp"
                    android:text="qdrptd"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/AdequatePlaceText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:text="적당한 곳"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/SlackURL"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="15dp"
                    android:text="workspace-url.slack.com"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/WhatILikeText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:text="좋아하는 것"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/WhatILike"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="15dp"
                    android:text="웹 개발, 컴퓨터, 퍼즐헌트, 추리소설 등"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/TMIText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:text="TMI"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/TMI"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="15dp"
                    android:text="아이콘 캡쳐하기 귀찮아서 똑같은 아이콘을 넣었어요."
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>